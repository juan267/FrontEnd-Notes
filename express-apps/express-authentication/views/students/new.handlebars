<div class="container">
  <h1>Sign Up</h1>

  {{#if error}}
    <div class="errors">{{error}}</div>
  {{/if}}

  <form id="sign-up" method="post" action="/students">
    <label class="label" for="name">Name</label>
    <input type="text" name="student[name]" placeholder="e.g., joe" >
    <br>
    <label class="label" for="email">Email</label>
    <input type="email" name="student[email]" placeholder="e.g., me@example.com" >
    <br>
    <label class="label" for="password">Password</label>
    <input type="password" name="student[password]" placeholder="6 or more characters">
    <br>
    <div class="submit"><input type="submit" value="Sign Up"></div>
  </form>

</div>
